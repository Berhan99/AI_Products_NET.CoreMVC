@{
}

@model ProductModel

<h1 class="h3">Create Product</h1>
<hr />


<div class="row">
    <div class="col-md-8">

        <form action="/admin/createproduct" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="col-sm-2 col-form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                <input class="form-control" asp-for="Url">
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <textarea id="editor" class="form-control" asp-for="Description" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                <input class="form-control" asp-for="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
                <input class="form-control" asp-for="ImageUrl">
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save Product" class="btn btn-primary mt-3">Save Product</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/jquery_3.7.1_.min.js"></script>
    <script src="~/js/ckeditor.js"></script>   

    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
    </script>
}
